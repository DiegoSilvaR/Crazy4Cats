<div class="row justify-content-center align-items-center" style="height: 80vh;">
  <div class="col-lg-6 col-md-8 col-sm-10">
    <div class="glass2 p-3 rounded-4 shadow-lg">
      <div class="card-body bg-transparent">
        <h2 class="card-title">Registro</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row mb-3">
            <div class="col-md-6">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="col-md-6">
              <%= f.label :name, "Nombre", class: "form-label" %><br />
              <%= f.text_field :name, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <%= f.label :age, "Edad", class: "form-label" %><br />
              <%= f.text_field :age, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="col-md-6">
              <%= f.label :phone, "Telefono", class: "form-label" %><br />
              <%= f.text_field :phone, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <%= f.label :password, "Contraseña", class: "form-label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "Nueva Contraseña", class: "form-control" %>
            </div>

            <div class="col-md-6">
              <%= f.label :password_confirmation, "Confirmar Contraseña", class: "form-label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Registrar", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
